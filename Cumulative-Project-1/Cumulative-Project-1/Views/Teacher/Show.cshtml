@model Cumulative_Project_1.Models.Teacher
@{
    ViewBag.Title = "Show";
}

    <div id="containershow">
        <nav>
            <a class="navlink" href="/Teacher/List">Back to Teachers</a>
            <a class="deletelink" style="float: right; color: red;" href="/Teacher/DeleteConfirm/@Model.TeacherId">Delete</a>
        </nav>
        <h2>
            @Model.TeacherFname @Model.TeacherLname
        </h2>
        <p>Teacher ID: @Model.TeacherId</p>
        <p>Employee Number: @Model.EmployeeNumber</p>
        <p>Hire Date: @Model.HireDate.ToShortDateString()</p>
        <p>Salary: @Model.Salary</p>
    </div>
